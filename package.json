{
  "name": "commit-generator",
  "displayName": "Commit Generator",
  "description": "Generate commit messages from git changes directly in Source Control.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Source Control"
  ],
  "activationEvents": [
    "*",
    "onStartupFinished",
    "onCommand:commitGenerator.generate",
    "workspaceContains:.git"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitGenerator.generate",
        "title": "生成 Commit 信息",
        "category": "Commit Generator",
        "icon": {
          "light": "media/wand-light.svg",
          "dark": "media/wand-dark.svg"
        }
      }
    ],
    "configuration": {
      "title": "Commit Generator",
      "properties": {
        "commitGenerator.openaiApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "OpenAI API key used to generate commit messages. If empty, extension will use `OPENAI_API_KEY` environment variable."
        },
        "commitGenerator.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "API key for OpenAI-compatible relay service. If empty, extension will fallback to `commitGenerator.openaiApiKey` and then `OPENAI_API_KEY`."
        },
        "commitGenerator.apiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com",
          "markdownDescription": "Base URL of OpenAI-compatible API service, for example `https://api.openai.com` or your relay URL."
        },
        "commitGenerator.apiProtocol": {
          "type": "string",
          "enum": [
            "chatCompletions",
            "responses"
          ],
          "default": "chatCompletions",
          "markdownDescription": "API protocol type. Most relay services use `chatCompletions`."
        },
        "commitGenerator.openaiModel": {
          "type": "string",
          "default": "gpt-4.1-mini",
          "markdownDescription": "OpenAI model for commit generation."
        },
        "commitGenerator.chineseStyle": {
          "type": "string",
          "enum": [
            "business",
            "engineering",
            "concise"
          ],
          "default": "engineering",
          "markdownDescription": "Chinese commit style template. `business`: product/feature wording, `engineering`: technical wording, `concise`: short and direct wording."
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "commitGenerator.generate",
          "when": "scmProvider == git",
          "group": "navigation@9"
        }
      ],
      "commandPalette": [
        {
          "command": "commitGenerator.generate"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.5.4"
  }
}
